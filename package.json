{
  "name": "modo-web-component",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/app.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/app.ts",
    "dev:ts": "NODE_ENV=development tsc --watch --noCheck",
    "dev:rollup": "NODE_ENV=development rollup --config rollup.dev.config.js --watch",
    "dev:server": "live-server temp --port=3000 --entry-file=dev.html",
    "dev:full": "concurrently \"yarn dev:ts\" \"yarn dev:rollup\" \"yarn dev:server\" --names \"tsc,rollup,server\" --prefix name --kill-others",
    "static": "tsx src/app.ts",
    "compile": "npx tsc --noCheck",
    "minify": "node scripts/terser-minify.js",
    "rollup": "rollup --config rollup.config.js",
    "build": "npm run compile && npm run minify && npm run rollup",
    "build:cdn": "npm run build && node scripts/create-umd-bundle.js",
    "render": "npm install && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "marked": "^16.3.0",
    "ofetch": "^1.4.1",
    "tldts": "^7.0.14"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^22.13.10",
    "concurrently": "^9.2.1",
    "live-server": "^1.2.2",
    "rollup": "^4.42.0",
    "terser": "^5.39.0",
    "tsx": "^3.12.7",
    "typescript": "^5.9.2"
  },
  "imports": {
    "#src/*": "./dist/src/*",
    "#root/*": "./dist/*"
  }
}
